%h2
  Edit #{resource_name.to_s.humanize}
= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-horizontal" }) do |f|
  = f.error_notification
  .form-group
    = f.label :name, "Agency Name", required: true, class: "control-label col-md-2 col-lg-2 label-required"
    .col-md-10.col-lg-10
      = f.input :name, required: true, autofocus: true, label: false, input_html: {class: "form-control"}
  .form-group
    = f.label :email, "Email", class: "control-label col-md-2 col-lg-2 label-required"
    .col-md-10.col-lg-10
      = f.input :email, required: true, label: false, input_html: {class: "form-control"}
  .form-group
    = f.label :address, "Address", required: true, class: "control-label col-md-2 col-lg-2 label-required"
    .col-md-10.col-lg-10
      = f.input :address, required: true, label: false, input_html: {class: "form-control"}
  .form-group
    = f.label :phone_number, "Phone number", required: true, class: "control-label col-md-2 col-lg-2 label-required"
    .col-md-10.col-lg-10
      = f.input :phone_number, required: true, label: false, input_html: {class: "form-control"}
  .form-group
    = f.label :account_number, "Account Number", required: true, class: "control-label col-md-2 col-lg-2 label-required"
    .col-md-10.col-lg-10
      = f.input :account_number, required: true, label: false, input_html: {class: "form-control"}
  .form-group
    = f.label :bank_name, "Bank Name", required: true, class: "control-label col-md-2 col-lg-2 label-required"
    .col-md-10.col-lg-10
      = f.input :bank_name, required: true, label: false, input_html: {class: "form-control"}
  .form-group
    = f.label :branch_address, "Branch Address", required: true, class: "control-label col-md-2 col-lg-2 label-required"
    .col-md-10.col-lg-10
      = f.input :branch_address, required: true, label: false, input_html: {class: "form-control"}
  .form-group
    = f.label :sort_code, "Sort Code", required: true, class: "control-label col-md-2 col-lg-2 label-required"
    .col-md-10.col-lg-10
      = f.input :sort_code, required: true, label: false, input_html: {class: "form-control"}
  .form-actions
    = f.button :submit, "Update", class: "btn btn-primary"
%div.change-pass
  = link_to "Change Password", edit_agencies_profile_path(resource)
