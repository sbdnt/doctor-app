.container
  .row.forgot-password
    %h3 Forgot your password?
    = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-horizontal" }) do |f|
      = f.error_notification
      .form-group
        = f.label :email, "Email", class: "control-label col-md-1 text-left"
        .col-md-11
          = f.input :email, required: true, autofocus: true, label: false, input_html: {class: "form-control email"}
      .form-actions
        = f.button :submit, "Send me reset password instructions", class: "btn btn-red"

:javascript
  var ready;
  ready = function() {
    var paramEmail = '#{@email}';
    $("#patient_email").val(paramEmail);
  };
  $(document).ready(ready);
  $(document).on('page:load', ready);
