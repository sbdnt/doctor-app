.patient-sign-up.password-strength
  .container
    .row
      .col-md-2.btn-scale-wrap.col-md-offset-4
        = link_to "SIGN UP WITH FACEBOOK", patient_omniauth_authorize_path(:facebook, sign_in_fb: false, referral_code: params[:referral_code]), class: "btn btn-primary btn-white page-scroll"
      .h4.col-md-9.col-md-offset-3.col-lg-9.col-lg-offset-3 Don't have an account, sign up now with one click
  = simple_nested_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal"}) do |f|
    = f.error_notification
    - if resource.errors.any?
      %ul
        - resource.errors.full_messages.each do |msg|
          %li{style: "color: red"}
            = msg

    = render 'form', form: f
    .container
      .row
        .form-actions
          .col-md-2.col-md-offset-4.btn-scale-wrap
            = f.button :submit, "Sign up", class: "btn btn-primary btn-red"
