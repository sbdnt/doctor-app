- if @location.errors
  %ul
    - @location.errors.full_messages.each do |error|
      %li= error

- if @exists_error
  %ul
    %li= @exists_error

= form_for @location, url: url, html: { class: "form-horizontal" } do |f|
  .form-group
    = f.label :address, class: "control-label col-lg-3"
    .col-lg-6
      = f.text_field :address, class: "form-control saved-address", placeholder: "Enter address"
      = f.hidden_field :latitude
      = f.hidden_field :longitude
  .form-group
    = f.label :address_type, class: "col-lg-3 text-right"
    .col-lg-1
      = f.radio_button :address_type, "home"
      = f.label :"address_type_home", "Home"
    .col-lg-1
      = f.radio_button :address_type, "work"
      = f.label :"address_type_work", "Work"
  .form-group
    = f.label :is_bill_address, "Billing Address", class: "col-lg-3 text-right"
    .col-lg-1
      = f.check_box :is_bill_address
  .form-group
    = f.submit class: "col-lg-2 col-lg-offset-3 btn btn-primary btn-red"