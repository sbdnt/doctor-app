.row.signup-doctor
  .doctor-sign-up
    .row
      - if current_agency.present?
        .h4.col-md-9.col-md-offset-3.col-lg-9.col-lg-offset-3
      - else
        .h4.col-md-9.col-md-offset-3.col-lg-9.col-lg-offset-3 Don't have an account, sign up now with one click
    = simple_nested_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal"}) do |f|
      = f.error_notification
      - if resource.errors.any?
        %ul
          - resource.errors.full_messages.each do |msg|
            %li{style: "color: red"}
              = msg

      = render 'form', form: f
      .form-actions
        = f.button :submit, "Sign up", class: "btn btn-primary"
